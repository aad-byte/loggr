<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

    <% let currentDate = new Date(2025, 3, 1)%>
    <table>
        <thead>
          <tr>
            <th>Sunday</th>
            <th>Monday</th>
            <th>Tuesday</th>
            <th>Wednesday</th>
            <th>Thursday</th>
            <th>Friday</th>
            <th>Saturday</th>
          </tr>
        </thead>
        <tbody>
          
          <% 
            const compareMonth = currentDate.getMonth() + 1
            while(currentDate.getMonth() < compareMonth)
        {%>
        <tr>
            <%let empty = currentDate.getDay(); //after the variable first week , empty will be set to 0 for all the other weeks%>

            <%for(let i = 0; i < empty; i ++){ %>
                <td> </td>
            <%}%>
            
            <% while(empty < 7){ %>
                <%let num = currentDate.getDate()%>
                <td> <%= num %> </td>
                <%currentDate.setDate(currentDate.getDate() + 1); //update the date to show right number
                empty++;%>
            <%}%>
          </tr>

        <%}%>
    
        </tbody>
      </table>
</body>
</html>